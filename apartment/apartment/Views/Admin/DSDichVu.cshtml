@model PagedList.IPagedList<apartment.Models.Entities.DichVu>
@{
    ViewBag.Title = "DS Dịch Vụ";
    Layout = "~/Views/SharedAdmin/_Layout.cshtml";
}

@using apartment.Models.Entities
@using PagedList.Mvc;

<script>
    var element = document.getElementById("collapse4");
    element.classList.add("in");
</script>

<h2 style="text-align:center">Danh Sách Dịch Vụ</h2>
<div class="bang-danh-sach">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
         
                <th>Mã Dịch Vụ</th>
                <th>Tên Dịch Vụ</th>
                <th>Giá Dịch Vụ</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @{
               
                foreach (DichVu dv in Model)
                {
                   
                    <tr>
                       
                        <td>@dv.MaDichVu</td>
                        <td>@dv.TenDichVu</td>
                        <td>@dv.GiaDichVu</td>
                        <td><a href="/Admin/SuaDichVu/@dv.MaDichVu">Sửa</a>&nbsp;|&nbsp;<a href="#" data-toggle="modal" data-target="#myModal" onclick="myFunction('/Admin/XoaDichVu/@dv.MaDichVu')">Xóa</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<!-- Thêm mã phân trang -->
<br />

    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("DSDichVu",
        new { page }))

    <!-- Kết thúc -->

    @Html.Partial("~/Views/SharedAdmin/_HopThoaiXacNhan.cshtml")
