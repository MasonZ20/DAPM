@model apartment.Models.Entities.TaiSan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/SharedAdmin/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h2 style="text-align:center">Thêm Tài Sản Hư Hại</h2>
    <div class="container admin-sua-thong-tin">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaTaiSan)

        <div class="form-group">
            <label class="col-md-12 text-center">Tên Tài Sản:</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.TenTaiSan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTaiSan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12 text-center">Mã Phòng:</label>
            <div class="col-md-12">
                @Html.DropDownList("MaPhong", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaPhong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12 text-center">Mô Tả Hư Hại:</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12 text-center">Tiền Đền Bù:</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.TienDenBu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TienDenBu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 text-center">
                <input type="submit" value="Save" class="btn btn-ok" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
