@using apartment.Models.Entities

<div class="wrap">
    
    <div class="row ">
        <div class="col-lg-6">
            <img src="~/Content/images/bannerfull.jpg" alt="Alternate Text" class="w-100" style="object-fit: cover;height:300px" />
        </div>
        <div class="col-lg-6 ">
            <a href="/"><img src="~/Content/images/canlogo1.JPG" width="400" height="300" style="border:33px solid" /></a>
        </div>
    </div>
    @if (Session["TaiKhoan"] == null)
    {
        <div class="dang-nhap">
            <label>Chào Khách!</label>
            <a href="/CaNhan/DangNhap">Đăng Nhập</a>
        </div>
    }
    else
    {
        <div class="dang-nhap">
            <label>Chào @(((TaiKhoan)Session["TaiKhoan"]).HoTen)!</label>
            <a href="/CaNhan/DangXuat">Đăng Xuất</a>
        </div>
    }
    <div class="header">
        <div class="header_bottom">
            <div class="menu">
                <ul>
                    <li id="li-0"><a href="/">Trang Chủ</a></li>
                    <li id="li-1"><a href="/DatPhong/DSPhong">Đặt Phòng</a></li>
                    <li id="li-2"><a href="/CaNhan/CaNhan">Cá Nhân</a></li>
                    <li id="li-3"><a href="/Home/Contact">Tin Tức</a></li>
                    <li id="li-4"><a href="/Home/About">Liên Hệ</a></li>
                
                </ul>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.DiaChi == null) { ViewBag.DiaChi = 0; }

<script>
    var li = document.getElementById('li-@ViewBag.DiaChi');
    li.classList.add('active');
</script>