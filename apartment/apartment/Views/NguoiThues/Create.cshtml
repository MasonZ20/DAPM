@model apartment.Models.Entities.NguoiThue

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/SharedAdmin/_Layout.cshtml";
}

<h2>Create</h2>
<script>
    var element = document.getElementById("collapse5");
    element.classList.add("in");
</script>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<h2 style="text-align:center">Thêm Người Thuê</h2>
    <div class="container admin-sua-thong-tin">
      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-md-12 text-center">Mã Người Thuê:</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.MaNguoiThue, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaNguoiThue, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12 text-center">Mã Đặt Phòng:</label>
            <div class="col-md-12">
                @Html.DropDownList("MaDatPhong", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaDatPhong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12 text-center">Họ và Tên:</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12 text-center">Email:</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12 text-center">NgayDat:</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.NgayDat, new { htmlAttributes = new { @class = "form-control", @id = "NgayDat", type = "date", placeholder = "mm/dd/yyyy" } })
                @Html.ValidationMessageFor(model => model.NgayDat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12 text-center">SĐT :</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12 text-center">CMND:</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.CMND, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CMND, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <label class="col-md-12 text-center"></label>
            <input type="submit" value="Thêm" class="btn btn-ok" />

        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
